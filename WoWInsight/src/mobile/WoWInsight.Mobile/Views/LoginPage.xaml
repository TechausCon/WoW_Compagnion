<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WoWInsight.Mobile.ViewModels;assembly=WoWInsight.Mobile.Core"
             x:Class="WoWInsight.Mobile.Views.LoginPage"
             Title="Login"
             BackgroundColor="{StaticResource WoWDarkBackground}">

    <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">

        <!-- WoW Style Border Container -->
        <Border Stroke="{StaticResource WoWGold}"
                StrokeThickness="4"
                StrokeShape="RoundRectangle 20"
                BackgroundColor="{StaticResource WoWPanelBackground}"
                Padding="20"
                HorizontalOptions="Center"
                WidthRequest="300">
            <VerticalStackLayout Spacing="20">
                <Image Source="appicon.svg"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center" />

                <Label Text="WoWInsight"
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <Label Text="Enter the World"
                       Style="{StaticResource SubHeadline}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <Button Text="Login with Battle.net"
                        Command="{Binding LoginCommand}"
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>
