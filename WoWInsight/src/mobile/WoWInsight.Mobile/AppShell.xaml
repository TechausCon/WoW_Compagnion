<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WoWInsight.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WoWInsight.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />

    <TabBar Route="main">
        <Tab Title="Characters" Icon="icon_char.png">
            <ShellContent ContentTemplate="{DataTemplate local:CharactersPage}" Route="characters" />
        </Tab>
        <Tab Title="Checklist" Icon="icon_check.png">
            <ShellContent ContentTemplate="{DataTemplate local:WeeklyChecklistPage}" Route="checklist" />
        </Tab>
    </TabBar>

</Shell>
